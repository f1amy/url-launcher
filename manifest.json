{
    "manifest_version": 2,
    "name": "URL Launcher",
    "description": "Open all your favorite URLs with one click!",
    "version": "1.0.0",
    "icons": { "16": "assets/icons/app_icon.png" },
    "browser_action": {
        "default_icon": "assets/icons/app_icon.png",
        "default_popup": "index.html",
        "default_title": "URL Launcher"
    },
    "permissions": ["tabs", "storage"]
}
